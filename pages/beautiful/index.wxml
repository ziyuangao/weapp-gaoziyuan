<!-- 例如：pages/random-image/index.wxml -->
<view class="page">
  <!-- 标题 -->
  <view class="title">没有别的想法，只是为了我的心情愉悦</view>

  <!-- 图片展示容器 -->
  <view class="image-container">
    <!-- 加载状态层 -->
    <view class="loading-layer" wx:if="{{isLoading}}">
      <view class="loading-spinner"></view>
      <text class="loading-text">正在寻找美好图片...</text>
      <text class="retry-count" wx:if="{{retryCount > 0}}">
        (第{{retryCount}}次尝试)
      </text>
    </view>
    <!-- 图片 -->
    <image 
      wx:if="{{ currentImageUrl && !isError}}"
      src="{{currentImageUrl}}" 
      mode="aspectFill"
      class="main-image"
      binderror="onImageError"
      bindload="onImageLoad"
      wx:if="{{!isLoading || currentImageUrl}}"
    />
    <!-- 错误状态层（仅当非加载中且无图片时显示） -->
    <view class="error-layer" wx:if="{{!isLoading && !currentImageUrl && isError}}">
      <text class="error-icon">😵</text>
      <text class="error-text">图片加载失败，请稍后重试</text>
    </view>

    
  </view>

  <!-- 操作按钮 -->
  <view 
    class="action-btn {{isCooling ? 'cooling' : ''}}"
    bindtap="onTapButton"
    disabled="{{isLoading || isCooling}}"
  >
    <text wx:if="{{!isCooling}}">😊 心情愉悦</text>
    <text wx:if="{{isCooling}}">冷却中 ({{coolingTime}}s)</text>
  </view>

  <!-- 底部信息 -->
  <view class="footer">
    <text>每一次点击，都是未知的惊喜</text>
    <text class="count-text">已为你呈现 {{displayCount}} 张图片</text>
  </view>
</view>