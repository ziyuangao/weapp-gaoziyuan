/* pages/bmi/index.wxss */
.bmi-page {
  padding: 20rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
  box-sizing: border-box;
}

/* 标题 */
.page-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
  margin: 40rpx 0;
  letter-spacing: 2rpx;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f2f5;
}

.input-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.input-label {
  font-size: 32rpx;
  color: #34495e;
  width: 160rpx;
  font-weight: 500;
}

.input-box {
  flex: 1;
  font-size: 36rpx;
  color: #2c3e50;
  padding: 20rpx 0;
  min-height: 80rpx;
}

.input-unit {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-left: 20rpx;
  width: 80rpx;
}

/* 错误提示 */
.error-tip {
  font-size: 26rpx;
  color: #e74c3c;
  margin: 10rpx 0 20rpx 160rpx;
  animation: fadeIn 0.3s;
}

/* 计算按钮 */
.calculate-btn {
  background: #3498db;
  border-radius: 50rpx;
  font-size: 34rpx;
  height: 90rpx;
  line-height: 1.5;
  margin: 30rpx 0 50rpx;
  box-shadow: 0 10rpx 20rpx rgba(52, 152, 219, 0.3);
  transition: all 0.3s;
}

.calculate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(52, 152, 219, 0.3);
}

.calculate-btn[disabled] {
  background: #bdc3c7 !important;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  animation: slideUp 0.5s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.08);
}

.result-title {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
}

.result-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #3498db;
  border-radius: 3rpx;
}

.bmi-value {
  text-align: center;
  margin: 30rpx 0 40rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
}

.bmi-number {
  font-size: 72rpx;
  font-weight: 700;
  color: #2c3e50;
  display: block;
  line-height: 1.2;
}

.bmi-unit {
  font-size: 28rpx;
  color: #7f8c8d;
  letter-spacing: 4rpx;
}

/* 建议框 */
.advice-box {
  background: #e8f4fc;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border-left: 8rpx solid #3498db;
}

.advice-label {
  display: block;
  font-size: 28rpx;
  color: #3498db;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.advice-content {
  font-size: 30rpx;
  color: #2c3e50;
  line-height: 1.5;
}

/* 参考标准 */
.reference {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 2rpx dashed #ecf0f1;
}

.reference-title {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
}

.reference-item {
  display: block;
  font-size: 26rpx;
  color: #5d6d7e;
  margin-bottom: 12rpx;
  padding-left: 30rpx;
  position: relative;
}

.reference-item::before {
  content: '•';
  color: #3498db;
  position: absolute;
  left: 10rpx;
  font-size: 30rpx;
}

/* 网络错误提示 */
.error-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(231, 76, 60, 0.95);
  color: white;
  padding: 30rpx 50rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  z-index: 1000;
  animation: fadeInOut 2.5s ease-in-out;
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(50rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInOut {
  0% { opacity: 0; }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}