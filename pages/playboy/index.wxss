/* pages/playboy/index.wxss */
.page-container {
  width: 100vw;
  height: 100vh;
  background: #000;
  position: relative;
  overflow: hidden;
}

/* 主视频样式 */
.main-video {
  width: 100%;
  height: 100%;
  display: block;
}

/* 错误重试层 */
.error-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.error-content {
  text-align: center;
  padding: 60rpx;
  background: rgba(40, 40, 40, 0.95);
  border-radius: 24rpx;
  border: 1rpx solid #444;
  min-width: 400rpx;
}

.error-text {
  display: block;
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 40rpx;
  font-weight: 500;
}

.retry-btn {
  background: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 30rpx;
  padding: 20rpx 50rpx;
  border: none;
}

.retry-btn:active {
  background: #06ad56;
  opacity: 0.9;
}

/* 加载提示层 */
.loading-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 50;
  animation: fadeIn 0.3s;
}

.loading-content {
  display: flex;
  align-items: center;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 15rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #fff;
}

/* 操作频繁提示 */
.toast-layer {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  z-index: 30;
  animation: fadeIn 0.3s;
}

.toast-text {
  font-size: 26rpx;
  color: #fff;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.swipe-guide {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 20;
  animation: fadeMoveUp 2s ease-in-out infinite;
}

.guide-text {
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 50rpx;
  display: inline-block;
}

@keyframes fadeMoveUp {
  0%, 100% { 
    opacity: 0.7;
    transform: translateY(0);
  }
  50% { 
    opacity: 1;
    transform: translateY(-20rpx);
  }
}