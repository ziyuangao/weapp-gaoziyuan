/* 页面容器 - 浅灰色背景 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 白色可视区域 */
.content-area {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 项目列表容器 - 使用flex布局横向排列 */
.item-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start; /* 从左开始排列 */
  gap: 30rpx; /* 项之间的间距 */
}

/* 每个项目的容器 */
.item-box {
  /* 每行显示3个，计算宽度：(100% - gap*2) / 3 */
  width: calc((100% - 60rpx) / 3);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  
  /* 点击效果 */
  transition: all 0.2s ease;
  border-radius: 12rpx;
}

/* 点击效果 */
.item-box:active {
  background-color: #f8f8f8;
  transform: scale(0.98);
}

/* 图片容器 - 限制大小 */
.item-image-box {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 图片样式 */
.item-image {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
}

/* 文字区域 */
.item-text-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 0 10rpx;
}

/* 主标题 - 大文字 */
.item-main-title {
  font-size: 32rpx;          /* 较大的字体 */
  font-weight: 600;          /* 加粗 */
  color: #333333;            /* 深色 */
  margin-bottom: 10rpx;
  line-height: 1.4;
  width: 100%;
  
  /* 文字超出显示省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 副标题 - 小文字 */
.item-sub-title {
  font-size: 24rpx;          /* 较小的字体 */
  font-weight: 400;          /* 正常粗细 */
  color: #999999;            /* 浅灰色 */
  line-height: 1.4;
  width: 100%;
  
  /* 文字超出显示省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}