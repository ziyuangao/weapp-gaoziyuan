/* 页面容器 - 浅灰色背景 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 白色可视区域 */
.content-area {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 项目列表容器 - 使用flex布局横向排列 */
.item-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start; /* 从左开始排列 */
  gap: 30rpx; /* 项之间的间距 */
}

/* 每个项目的容器 */
.item-box {
  /* 每行显示3个，计算宽度：(100% - gap*2) / 3 */
  width: calc((100% - 60rpx) / 3);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  
  /* 点击效果 */
  transition: all 0.2s ease;
  border-radius: 12rpx;
}

/* 点击效果 */
.item-box:active {
  background-color: #f8f8f8;
  transform: scale(0.98);
}

/* 图片容器 - 限制大小 */
.item-image-box {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 图片样式 */
.item-image {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
}

/* 文字区域 */
.item-text-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 0 10rpx;
}

/* 主标题 - 大文字 */
.item-main-title {
  font-size: 32rpx;          /* 较大的字体 */
  font-weight: 600;          /* 加粗 */
  color: #333333;            /* 深色 */
  margin-bottom: 10rpx;
  line-height: 1.4;
  width: 100%;
  
  /* 文字超出显示省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 副标题 - 小文字 */
.item-sub-title {
  font-size: 24rpx;          /* 较小的字体 */
  font-weight: 400;          /* 正常粗细 */
  color: #999999;            /* 浅灰色 */
  line-height: 1.4;
  width: 100%;
  
  /* 文字超出显示省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.daily-notice {
  background-color: #fffbe6; /* 浅黄色背景 */
  color: #8a6d3b;           /* 深黄色文字 */
  padding: 0rpx 15rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #faad14; /* 左侧装饰条 */
  position: relative;
  overflow: hidden; /* 关键：隐藏超出部分 */
  white-space: nowrap; /* 关键：文字不换行 */
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.1);
  
  /* 设置一个固定高度，避免内容闪烁 */
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

/* 滚动文字容器 */
.notice-text {
  display: inline-block;
  font-size: 28rpx;
  line-height: 1.4;
  padding-left: 100%; /* 初始位置在容器右侧外 */
  animation: notice-scroll 8s linear forwards;/* 10秒动画，结束后保持最后一帧 */
}

/* 定义滚动动画 */
@keyframes notice-scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%); /* 向左移动自身100%宽度 */
  }
}

/* 为滚动结束添加淡出效果（可选） */
.daily-notice {
  animation: notice-fade-out 0.5s ease 8s forwards; /* 在5秒后开始淡出 */
}

@keyframes notice-fade-out {
  0% { opacity: 1; }
  100% { opacity: 0; max-height: 0; padding: 0; margin: 0; overflow: hidden; }
}