/* pages/statement/index.wxss */
.statement-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
  padding: 30rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 40rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.header-title {
  display: block;
  font-size: 38rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 35rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 40rpx;
}

/* 段落样式 */
.section {
  margin-bottom: 45rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
  display: block;
}

.section-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: #34495e;
  margin-bottom: 18rpx;
  text-align: justify;
}

.section-text:last-child {
  margin-bottom: 0;
}

/* 特殊文本样式 */
.highlight {
  color: #07c160;
  font-weight: 500;
  margin: 25rpx 0;
}

.emphasize {
  color: #e67e22;
  font-weight: 500;
  border-left: 6rpx solid #f39c12;
  padding-left: 20rpx;
  margin-top: 20rpx;
}

/* 承诺列表 */
.promise-list {
  margin-top: 15rpx;
}

.promise-item {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
}

.promise-item:last-child {
  margin-bottom: 0;
}

.promise-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  margin-top: 6rpx;
  flex-shrink: 0;
}

.promise-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #2c3e50;
  flex: 1;
}

/* 重要提醒部分 */
.important-section {
  background: #fff8e1;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 40rpx -5rpx;
  border: 2rpx solid #ffeaa7;
}

.reminder-list {
  margin-top: 15rpx;
}

.reminder-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.reminder-item:last-child {
  margin-bottom: 0;
}

.reminder-bullet {
  color: #e74c3c;
  font-size: 32rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.reminder-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #2c3e50;
  flex: 1;
}

/* 感谢文本 */
.thank-text {
  text-align: center;
  font-weight: 500;
  color: #3498db;
  margin-top: 30rpx;
  font-size: 30rpx;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 30rpx 0;
}

.footer-text {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.footer-version {
  font-size: 24rpx;
  color: #bdc3c7;
}